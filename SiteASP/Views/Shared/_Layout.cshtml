<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="grid-container">
        <div class="socialmedia">
            <a href="https://www.facebook.com/profile.php?id=100010039026877&ref=bookmarks"><img src="~/Content/Image/SocialMedia/icons8-facebook-32.png" /></a>
            <a href="https://plus.google.com/u/0/108434843735076634784"><img src="~/Content/Image/SocialMedia/icons8-google-plus-32.png" /></a>
            <a href="https://www.linkedin.com/in/alex-rybak-111901156/"><img src="~/Content/Image/SocialMedia/icons8-linkedin-32.png" /></a>
            <a href="https://www.twitch.tv/shpil1993"><img src="~/Content/Image/SocialMedia/icons8-twitch-32.png" /></a>
            <a href="https://twitter.com/shpil1993?lang=ru"><img src="~/Content/Image/SocialMedia/icons8-twitter-32.png" /></a>
            <a href="https://www.youtube.com/channel/UCib5SSDWsFpMDVgLj5xqPbQ?view_as=subscriber"><img src="~/Content/Image/SocialMedia/icons8-youtube-32.png" /></a>
        </div>
        <div class="header">
            <a href="/" class="logo"><img src="~/Content/Image/Logo.png" /></a>
            <nav class="head_nav">
                <ul class="head_nav_ul">
                    <li class="head_nav_li"><a href="/" class="hyperlink head_nav_a">Главная</a></li>
                    <li class="head_nav_li"><a href="/Home/AboutMe" class="hyperlink head_nav_a">Обо мне</a></li>
                </ul>
            </nav>
        </div>
        <div class="menu">
            @Html.Action("Index", "Menu")
        </div>
        <div class="content">
            @RenderBody()
        </div>
        <div class="sidebar">
            <h2 class="topArticles">Трансляция</h2>
            <iframe src="https://player.twitch.tv/?channel=shpil1993" frameborder="0" allowfullscreen="true" scrolling="no" class="broadcast"></iframe>
            <h2 class="topArticles">Топ Статей</h2>
            @Html.Action("TopArticles", "Home")
            <h2 class="topArticles">Топ Комментариев</h2>
            @Html.Action("TopComments", "Comment")
        </div>
        <div class="footer">
            <a href="/" class="logo"><img src="~/Content/Image/Logo.png" /></a>
            <nav class="head_nav">
                <ul class="head_nav_ul">
                    <li class="head_nav_li"><a href="/" class="hyperlink head_nav_a">Главная</a></li>
                    <li class="head_nav_li"><a href="/Home/AboutMe" class="hyperlink head_nav_a">Обо мне</a></li>
                    <li class="head_nav_li"><a href="/Home/CopyRight" class="hyperlink head_nav_a">Правообладателям</a></li>
                </ul>
            </nav>
        </div>
  </div>
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Content/MyScripts/UpButton.js" type="text/javascript"></script>
        <script src="~/Content/MyScripts/List.js" type="text/javascript"></script>
</body>
</html>